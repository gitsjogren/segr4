<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
                android:title="Application Settings">
                <ListPreference
	                android:title="Default campus"
	                android:summary="Choose your default campus to show at startup."
	                android:key="defaultCampus"
	                android:defaultValue="true"
	                android:entries="@array/campus"
	                android:entryValues="@array/campusValues" />
        </PreferenceCategory>
        <PreferenceCategory
                android:title="Other things">
                <ListPreference 
                    android:title="Send feedback"
                    android:summary="Bugs, suggestions or w/e"
                    android:key="feedback" />
                
</PreferenceCategory>
</PreferenceScreen>
