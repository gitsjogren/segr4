<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Application Settings" >
        <ListPreference
            android:key="defaultCampus"
            android:title="Default campus"
            android:summary="Choose your default campus to show at startup."
            android:defaultValue="0"
            android:entries="@array/campus"
            android:entryValues="@array/startCampus" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Extras" >
        <Preference 
            android:key="feedback"
            android:title="Send feedback"
            android:summary="Bugs, suggestions or w/e" />
        <Preference
            android:key="aboutPage"
            android:title="About"
            android:summary="Information about the application" />
    </PreferenceCategory>

</PreferenceScreen>